                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="PTTS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/editText_sitting_ptts"
                    android:textColor="@color/skyblue"
                    android:inputType="text"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="PTBS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_ptbs"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="F"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_F"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="S"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText_sitting_S"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:inputType="text"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="L"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_L"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/editText_sitting_R"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:inputType="text"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_B"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="交互模式"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_Interate"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="手动模式"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_Manual"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="重力模式"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/channel_bg"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText_sitting_Gravity"
                    android:textColor="@color/skyblue"
                    android:layout_width="100dp"
                    android:hint="发送值"
                    android:textColorHint="?android:attr/textColorHighlightInverse"/>

